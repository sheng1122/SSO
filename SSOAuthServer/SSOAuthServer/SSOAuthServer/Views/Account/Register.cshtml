@model SSOAuthServer.Models.AccountViewModels.RegisterViewModel

@using SSOAuthServer.Helpers

@{
    ViewData["Title"] = "Home Page";
}

<div class="page-header">
    <h1>Register</h1>
</div>

<div class="row">
    <div class="col-md-6 col-lg-offset-3">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Register</h3>
            </div>
            <div class="panel-body">

                <form asp-action="Register" method="post">
                    <input type="hidden" asp-for="ReturnUrl" />
                    <input type="hidden" asp-for="ClientId" />

                    <fieldset>
                        <div class="form-group">
                            <label asp-for="FirstName"></label>
                            <input class="form-control" placeholder="FirstName" asp-for="FirstName" autofocus required>
                        </div>
                        <div class="form-group">
                            <label asp-for="LastName"></label>
                            <input class="form-control" placeholder="LastName" asp-for="LastName" autofocus required>
                        </div>
                        <div class="form-group">
                            <label asp-for="Email"></label>
                            <input class="form-control" placeholder="Email" asp-for="Email" autofocus required>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password"></label>
                            <input type="password" class="form-control" placeholder="Password" asp-for="Password" autocomplete="off" required>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-primary" name="button" value="register">Register</button>
                            <button class="btn btn-default" name="button" value="cancel">Cancel</button>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>
