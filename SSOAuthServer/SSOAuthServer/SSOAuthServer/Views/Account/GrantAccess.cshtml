@model SSOAuthServer.Models.AccountViewModels.GrantAccessViewModel

@using SSOAuthServer.Helpers

@{
    ViewData["Title"] = "Home Page";
}

<div class="page-header">
    <h1>Grant Access to @ViewBag.SSOClientName</h1>
</div>

<div class="row">
    <div class="col-md-6 col-lg-offset-3">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Grant Access</h3>
            </div>
            <div class="panel-body">

                <form asp-action="GrantAccess" method="post">
                    <input type="hidden" asp-for="ReturnUrl" />
                    <input type="hidden" asp-for="ClientId" />

                    <h7 class="panel-title">Hi <b>@UserSession.UserName</b>, are you sure want to grant <b>@ViewBag.SSOClientName</b> to access your data?</h7>
                    <br />
                    <br />

                    <fieldset>
                        <div class="form-group">
                            <button class="btn btn-primary" name="button" value="confirm">Confirm</button>
                            <button class="btn btn-default" name="button" value="cancel">Cancel</button>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>
